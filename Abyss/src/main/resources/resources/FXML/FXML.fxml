<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="background" prefHeight="1000.0"
	prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.abyss.controller.MainController">
	<children>
		<StackPane>
			<children>
				<ImageView fx:id="defeat" fitHeight="1000.0"
					fitWidth="1920.0" pickOnBounds="true" preserveRatio="true" />
				<BorderPane prefHeight="1000.0" prefWidth="1920.0">
					<center>
						<StackPane maxHeight="-Infinity" maxWidth="-Infinity"
							prefHeight="452.0" prefWidth="1127.0"
							BorderPane.alignment="CENTER">
							<children>
								<!-- ANIMATION -->
								<fx:include fx:id="board" source="Board.fxml" />
								<!-- BOARD -->

								<!-- ANIMATION -->
								<fx:include fx:id="animation" source="Animation.fxml" />
								<!-- BOARD -->

							</children>
						</StackPane>
					</center>
					<left>
						<VBox BorderPane.alignment="CENTER">
							<BorderPane.margin>
								<Insets left="50.0" right="45.0" />
							</BorderPane.margin>
							<children>

								<!-- TOUR -->
								<fx:include fx:id="tour" source="Tour.fxml" />
								<!-- TOUR -->

							</children>
						</VBox>
					</left>
					<bottom>
						<HBox prefHeight="235.0" prefWidth="1920.0" spacing="250.0"
							BorderPane.alignment="CENTER">
							<children>
								<Label fx:id="allyHp" prefHeight="100.0" prefWidth="100.0"
									text="10000" textFill="#36d353">
									<padding>
										<Insets left="10.0" />
									</padding>
									<font>
										<Font size="40.0" />
									</font>
								</Label>

								<!-- ALLYHAND -->
								<fx:include fx:id="allyHand" source="AllyHand.fxml" />
								<!-- ALLYHAND -->

								<ImageView id="mainDeck" fitHeight="225.0"
									fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
									<HBox.margin>
										<Insets bottom="10.0" left="150.0" />
									</HBox.margin>
								</ImageView>
							</children>
						</HBox>
					</bottom>
					<right>

						<!-- INFORMATION -->
						<fx:include fx:id="information"
							source="Information.fxml" />
						<!-- INFORMATION -->

					</right>
					<top>
						<HBox prefHeight="235.0" prefWidth="1920.0" spacing="250.0"
							BorderPane.alignment="CENTER">
							<children>
								<Label fx:id="ennemyHp" prefHeight="100.0"
									prefWidth="100.0" text="10000" textFill="#36d353">
									<font>
										<Font size="40.0" />
									</font>
									<padding>
										<Insets left="10.0" />
									</padding>
								</Label>

								<!-- ENNEMY HAND -->
								<fx:include fx:id="ennemyHand"
									source="EnnemyHand.fxml" />
								<!-- ENNEMY HANDS -->

								<ImageView id="opponentDeck" fitHeight="225.0"
									fitWidth="150.0" pickOnBounds="true" preserveRatio="true">
									<HBox.margin>
										<Insets left="150.0" top="10.0" />
									</HBox.margin>
								</ImageView>
							</children>
						</HBox>
					</top>
				</BorderPane>
			</children>
		</StackPane>
	</children>
</AnchorPane>
